<h1>Welcome</h1>
<p>Login:</p>
<form id="login" method="post" action="/users/authenticate">
	<label for="username">Username:</label>
	<input name="username" type="text" /><br />
	<label for="password">Password:</label>
	<input name="password" type="password" />
	<input type="submit" />
</form>

<% if session[:user] %>
 Hello	<%= session[:user].name %>!

<% if @user.twitter_authd?(@user) %>
	<% client = Tweet.client(@user) %>
	<%= client.info["name"] %><br />
	<img src="<%= client.info["profile_image_url"] %>" /><br />
  <%= client.home_timeline.first.text %><br />
  <%= client.friends.sort{|a, b| a.followers_count <=> b.followers_count}.reverse.first.name %>

<% else %>
	<p>Register Your account on Twitter!</p>
	<form id="twitter" action="/register">
		<input type="submit" value="Register">
	</form>
<% end %>

<% end %>
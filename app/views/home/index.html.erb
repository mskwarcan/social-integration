
<div class="col1">
	
	<% if session[:user] %>
		<% if @user.twitter_authd?(@user) %>
		<h2 class="notop">Your Twitter</h2>
			<% client = Tweet.client(@user) %>
			<img class="twitter" src="<%= client.info["profile_image_url"] %>" /><h3><%= client.info["screen_name"] %></h3>
			<b>Followers:</b> <%= client.info["followers_count"] %>
		
		<h3>You Recent Tweets</h3>	
		<% tweets = Twitter.home_timeline(client.info["screen_name"]) %>
		<ul class="tweets">
		<% tweets.each do | tweet |%>
			<li>Created at: <%= tweet.created_at %> by <%= tweet.user.screen_name %><br />
			<%= tweet.text %></li>
		<% end %>
		<ul>

		<form id="twitter" action="/twitter_post">
			<textarea name="twitter_post" maxlength="140"></textarea>
			<input type="submit" value="Post">
		</form>

		<% else %>
			<img src="/images/twitter.jpg" />
			<h3>Register Your account on Twitter!</h3>
			<form id="twitter" action="/register">
				<input type="submit" class="submit" value="Register on Twitter">
			</form>
		<% end %>
	<% else %>
		<%= render :partial => "/shared/login" %>
	<% end %>
</div>

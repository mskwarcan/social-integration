<h1>Welcome</h1>
<p>Login:</p>
<form id="login" method="post" action="/users/authenticate">
	<label for="username">Username:</label>
	<input name="username" type="text" /><br />
	<label for="password">Password:</label>
	<input name="password" type="password" />
	<input type="submit" />
</form>

<% if session[:user] %>
 Hello	<%= session[:user].name %>!

<% if @user.twitter_authd?(@user) %>
	<% client = Tweet.client(@user) %>
	<%= client.info["name"] %>
	<img src="<%= client.info["profile_image_url"] %>" />
<% tweets = client.statuses.user_timeline? %>

<% tweets.each do |t|%>
  <% created = DateTime.parse(t.created_at)%>
  <% # create the tweet if it doesn't already exist%>
  <% unless Tweet.exists?(["created=?", created])%>
    <% Tweet.create({:content => t.text, :created => created })%>
   <% end%>
<% end %>

<% else %>
	<p>Register Your account on Twitter!</p>
	<form id="twitter" action="/register">
		<input type="submit" value="Register">
	</form>
<% end %>

<% end %>